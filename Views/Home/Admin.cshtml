
@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/line-awesome-1.3.0/1.3.0/css/line-awesome.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/admin.css" rel="stylesheet" />
<html ng-app="myApp">
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1" />
    <title>Admin</title>
</head>
<body>
    <input type="checkbox" id="nav-toggle" />
    <div class="sidebar" ng-controller="MenuController">
        <div class="sidebar-brand">
            <h1><span class="lab la-accusoft"></span>
            <span>IoT</span></h1>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="#/" ng-class="{ active: isActive('dashboard') }" ng-click="setActive('dashboard')">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="#/Users" ng-class="{ active: isActive('users') }" ng-click="setActive('users')">
                        <span class="las la-users"></span>
                        <span>Users</span>
                    </a>
                </li>
                <li>
                    <a href="#/Roles" ng-class="{ active: isActive('roles') }" ng-click="setActive('roles')">
                        <span class="las la-user-shield"></span>
                        <span>Roles</span>
                    </a>
                </li>
                <li>
                    <a href="#/Report" ng-class="{ active: isActive('reports') }" ng-click="setActive('reports')">
                        <span class="las la-clipboard-list"></span>
                        <span>Reports</span>
                    </a>
                </li>
            </ul>

        </div>

    </div>
    <div class="main-content">
        <header>
            <h1>
                <label for="nav-toggle">
                    <span class="las la-bars" style="cursor:pointer;">

                    </span>
                </label>
                Dashboard
            </h1>

            <div class="user-wrapper">
                <span class="las la-rupee-sign"></span>
                <h4> Hello</h4>
            </div>

        </header>
        <div ng-view></div>
    </div>
   
</body>
</html>
